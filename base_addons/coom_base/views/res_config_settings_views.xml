<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.2coom</field>
            <field name="model">res.config.settings</field>
<!--            <field name="priority" eval="90"/>-->
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="IfrsERP" id="2coom" string="IFRSERP" data-key="2coom">
                        <h2>IFRSERP Settings</h2>
                        <div class="row mt16 o_settings_container" id="2coom_settings">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Accounting</span>
                                    <div class="text-muted content-group mt16">
                                        <span>Turn On Accounts Checker</span>
                                        <field name="account_checker" label="account" class="text-center" style="width: 10%; min-width: 4rem;" />
<!--                                        <span> days before the end date</span>-->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16 o_settings_container" id="2coom_settings">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Purchases</span>
                                    <div class="text-muted content-group mt16">
                                        <span>Check Received Quantities</span>
                                        <field name="purchase_checker" class="text-center" style="width: 10%; min-width: 4rem;" />
<!--                                        <span> days before the end date</span>-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
